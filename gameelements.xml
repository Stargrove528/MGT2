<root>
	<tooltip>
		<frame name="tooltipbox" margins="7,4,7,4" wrapwidth="300" />
		<radial name="tooltipbox" margins="7,4,7,4" />
	</tooltip>

	<distance>
		<base>1.5</base>
		<diagmult>*</diagmult>
		<suffix>m</suffix>
	</distance>

	<panel name="dicepanel" merge="join">
		<anchored>
			<left offset="0" />
			<top anchor="bottom" offset="-175" />
		</anchored>
	</panel>

	<script name="D66Support">
		function onInit()
			DiceManager.addDefaultD66Handling();
		end
	</script>
	<customdie name="d66">
		<model>d6</model>
		<menuicon>customdice</menuicon>
	</customdie>
	<customdie name="d60">
		<model>d6</model>
		<script>
			function onValue(result)
				return DiceManager.onD60ResultValue(result);
			end
		</script>
	</customdie>

